<resources>


    <!--定制版本化差异-->
    <style name="AppTheme" parent="BaseTheme">
        <!--4.4版本以前无法实现沉浸式状态栏-->

    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_gray</item>
    </style>



    <!--Mine-->
    <style name="item_layout">
        <!--RelativeLayout使用-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="item_title">
        <!--RelativeLayout的子view-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="item_content">
        <!--RelativeLayout的子view-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
